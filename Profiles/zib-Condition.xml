<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="zib-Condition" />
  <url value="http://nictiz.nl/fhir/StructureDefinition/zib-Condition" />
  <name value="ZibCondition" />
  <title value="zib Condition" />
  <status value="draft" />
  <publisher value="Nictiz" />
  <contact>
    <name value="Nictiz" />
    <telecom>
      <system value="url" />
      <value value="https://www.nictiz.nl" />
      <use value="work" />
    </telecom>
  </contact>
  <description value="A condition is pathological or non-pathological state that presents with symptoms. It is 'that what the patient has'. A care professional can assign a (differential) diagnosis to the condition. The symptoms as well as the diagnostic insight with respect to the same condition may change over time." />
  <purpose value="This Condition resource represents the Dutch [zib ('Zorginformatiebouwsteen', i.e. Health and Care Information Model) Condition v1.0(2023)](https://zibs.nl/wiki/Condition-v1.0(2023EN))." />
  <copyright value="Copyright and related rights waived via CC0, https://creativecommons.org/publicdomain/zero/1.0/. This does not apply to information from third parties, for example a medical terminology system. The implementer alone is responsible for identifying and obtaining any necessary licenses or authorizations to utilize third party IP in connection with the specification or otherwise." />
  <fhirVersion value="4.0.1" />
  <mapping>
    <identity value="zib-condition-v1.0-2023EN" />
    <uri value="https://zibs.nl/wiki/Condition-v1.0(2023EN)" />
    <name value="zib Condition-v1.0(2023EN)" />
  </mapping>
  <kind value="resource" />
  <abstract value="false" />
  <type value="Condition" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Condition" />
  <derivation value="constraint" />
  <differential>
    <element id="Condition">
      <path value="Condition" />
      <short value="Condition" />
      <alias value="Aandoening" />
      <alias value="zib-Condition" />
      <mapping>
        <identity value="zib-condition-v1.0-2023EN" />
        <map value="NL-CM:99.98.1" />
        <comment value="Condition" />
      </mapping>
    </element>
    <element id="Condition.extension:assertedDate">
      <path value="Condition.extension" />
      <sliceName value="assertedDate" />
      <type>
        <code value="Extension" />
        <profile value="http://hl7.org/fhir/StructureDefinition/condition-assertedDate" />
      </type>
    </element>
    <element id="Condition.extension:assertedDate.value[x]">
      <path value="Condition.extension.value[x]" />
      <short value="ConditionStatusDate" />
      <definition value="The moment from when the status of the condition applies. It may be a vague moment." />
      <alias value="AandoeningStatusDatum" />
      <mapping>
        <identity value="zib-condition-v1.0-2023EN" />
        <map value="NL-CM:99.98.2" />
        <comment value="ConditionStatusDate" />
      </mapping>
    </element>
    <element id="Condition.clinicalStatus">
      <path value="Condition.clinicalStatus" />
      <short value="ConditionStatus" />
      <definition value="The state of the condition. This is independent of the diagnostic insight for the condition. The state indicates whether the condition is (no longer) present, or whether there is progression, remission, etc.." />
      <alias value="AandoeningStatus" />
      <binding>
        <strength value="required" />
        <description value="Use ConceptMap AandoeningStatusCodelijst_to_ConditionClinicalStatusCodes to translate terminology from the functional model to profile terminology in ValueSet ConditionClinicalStatusCodes." />
        <valueSet value="http://hl7.org/fhir/ValueSet/condition-clinical|4.0.1">
          <extension url="http://hl7.org/fhir/StructureDefinition/11179-permitted-value-conceptmap">
            <valueCanonical value="http://nictiz.nl/fhir/ConceptMap/AandoeningStatusCodelijst_to_ConditionClinicalStatusCodes" />
          </extension>
        </valueSet>
      </binding>
      <mapping>
        <identity value="zib-condition-v1.0-2023EN" />
        <map value="NL-CM:99.98.3" />
        <comment value="ConditionStatus" />
      </mapping>
    </element>
    <element id="Condition.clinicalStatus.coding">
      <path value="Condition.clinicalStatus.coding" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="$this" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="1" />
    </element>
    <element id="Condition.clinicalStatus.coding:conditionStatusCodelist">
      <path value="Condition.clinicalStatus.coding" />
      <sliceName value="conditionStatusCodelist" />
      <min value="1" />
      <max value="1" />
      <binding>
        <strength value="required" />
        <description value="In addition to a coding from this ValueSet, the corresponding coding from the FHIR base ValueSet SHALL be communicated. The ConceptMap &lt;http://nictiz.nl/fhir/ConceptMap/AandoeningStatusCodelijst_to_ConditionClinicalStatusCodes&gt; can be used to relate these two ValueSets." />
        <valueSet value="http://decor.nictiz.nl/fhir/ValueSet/2.16.840.1.113883.2.4.3.11.60.40.2.99.98.1--20240101000000" />
      </binding>
    </element>
    <element id="Condition.category">
      <path value="Condition.category" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="$this" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="1" />
    </element>
    <element id="Condition.category:conditionCode">
      <path value="Condition.category" />
      <sliceName value="conditionCode" />
      <min value="1" />
      <max value="1" />
      <patternCodeableConcept>
        <coding>
          <system value="http://snomed.info/sct" />
          <code value="64572001" />
        </coding>
      </patternCodeableConcept>
    </element>
    <element id="Condition.severity">
      <path value="Condition.severity" />
      <short value="Severity" />
      <definition value="Indication of the severity of the condition. A condition may cause few or mild symptoms and yet be serious, but the reverse is also possible." />
      <alias value="Ernst" />
      <binding>
        <strength value="required" />
        <valueSet value="http://decor.nictiz.nl/fhir/ValueSet/2.16.840.1.113883.2.4.3.11.60.40.2.99.98.2--20240101000000" />
      </binding>
      <mapping>
        <identity value="zib-condition-v1.0-2023EN" />
        <map value="NL-CM:99.98.5" />
        <comment value="Severity" />
      </mapping>
    </element>
    <element id="Condition.onset[x]">
      <path value="Condition.onset[x]" />
      <slicing>
        <discriminator>
          <type value="type" />
          <path value="$this" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Condition.onset[x]:onsetDateTime">
      <path value="Condition.onset[x]" />
      <sliceName value="onsetDateTime" />
      <short value="ConditionStartDateTime" />
      <definition value="Date and possibly time when the condition started. One will often use the start date of the first symptom. It may be a vague date." />
      <alias value="AandoeningBeginDatumTijd" />
      <type>
        <code value="dateTime" />
      </type>
      <mapping>
        <identity value="zib-condition-v1.0-2023EN" />
        <map value="NL-CM:99.98.4" />
        <comment value="ConditionStartDateTime" />
      </mapping>
    </element>
    <element id="Condition.note">
      <path value="Condition.note" />
      <max value="1" />
    </element>
    <element id="Condition.note.text">
      <path value="Condition.note.text" />
      <short value="Comment" />
      <definition value="A comment in free text with respect to the condition, that is not represented by the other data elements in the information model." />
      <alias value="Toelichting" />
      <mapping>
        <identity value="zib-condition-v1.0-2023EN" />
        <map value="NL-CM:99.98.6" />
        <comment value="Comment" />
      </mapping>
    </element>
  </differential>
</StructureDefinition>